doctype html
html
  head
    meta(http-equiv='Content-type' content='text/html; charset=utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='shortcut icon' href='https://d3k90kvix375hb.cloudfront.net/assets/favicon.ico' type='image/vnd.microsoft.icon')
    for css in htmlWebpackPlugin.files.css
      link(rel='stylesheet' type='text/css' href=css)
    title #{htmlWebpackPlugin.options.title}
  body
    header
      nav
        .logo
        ul.nav-items
          li Kafka Demo
          li.nav-legend Legend
            ul.legend
              li.color1 Topic 1
              li.color2 Topic 2
              li.color3 Topic 3
              li.color4 Topic 4
    main
      .chart-container.chart-topics
        span.title Topics Count
        .chart.loading
      .chart-container
        span.title Averages
        .chart.loading
      .chart-container
        span.title Related Words
        .chart.loading
      .chart-container
        span.title Topics
        .chart.loading
    for js in htmlWebpackPlugin.files.js
      script(src=js)
